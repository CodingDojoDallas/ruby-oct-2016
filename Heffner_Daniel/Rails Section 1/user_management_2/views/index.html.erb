<h1>list of users</h1>
<a href="/users/new">Add new User</a>
<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email Address</th>
		</tr>
	</thead>
	<tbody>
		<% if @users.length > 0 %>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email_address %></td>
			</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

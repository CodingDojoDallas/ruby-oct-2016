<h1>Hello</h1>
<%= form_for @user do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name , :value => @user['first_name'] %><br />

  <%= f.label :last_name %>:
  <%= f.text_field :last_name, :value => @user['last_name'] %><br />

  <%= f.label   :email %>:
  <%= f.text_field :email, :value => @user['email'] %><br />

  <%= f.label :password %>:
  <%= f.text_field :password, :value => @user['password']%><br />

  <%= f.submit %>
<% end %>

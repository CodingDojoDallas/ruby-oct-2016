<%= form_for @product do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name , :value => @product['name'] %><br />

  <%= f.label :description %>:
  <%= f.text_field :description, :value => @product['description'] %><br />

  <%= f.label   :price %>:
  <%= f.text_field :price, :value => @product['price'] %><br />

  <%= f.select :category_id, Category.all.collect { |p| [ p.name, p.id ] }, include_blank: true, :value => @product['category'] %><br />
  <%= f.submit %>
<% end %>

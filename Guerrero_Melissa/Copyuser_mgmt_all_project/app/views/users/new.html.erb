<% if flash[:errors] %>
	<ul>
	<% flash[:errors].each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>
<h1>New user</h1>
<form action="/users/create" method="post">
<input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token"/> 
<p>First name<input type="text" name="user[first_name]"/></p>
<p>Last name<input type="text" name="user[last_name]"/></p>
<p>Email<input type="email" name="user[email_address]"/></p>
<p>Password<input type="password" name="user[password]"/></p>
<p><input type="submit" value="Create"></p>
</form>
<a href="/">Back</a>
<h1>Listing products</h1>
<a href="<%=comments_path%>">All comments</a>
<table>
	<tr>
	<th>Name</th>
	<th>Description</th>
	<th>Price</th>
	<th>Category</th>
	<th>Actions</th>
	</tr>
	<% @products.each do |product| %>
	<tr>
	<td><%=product.name%></td>
	<td><%=product.description%></td>
	<td><%=product.price%></td>
	<td><%=product.category.try(:name)%></td> 
	<td><a href="<%=product_path(product)%>">Show</a></td>
	<td><a href="<%=edit_product_path(product)%>">Edit</a></td>
	<td><a href="<%=product_path(product)%>" data-method="delete">Destroy</a></td>
	</tr>
	<% end %>
</table>
	<a href="<%=new_product_path%>">New Product</a>
